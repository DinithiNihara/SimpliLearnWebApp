@model SimpliLearnWebApp.Models.Trainer

@{
    ViewData["Title"] = "Create";
}

<h1>Registration Form</h1>

<h4>Trainer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name:</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name:</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exp" class="control-label">Experience:</label>
                <input asp-for="Exp" class="form-control" />
                <span asp-validation-for="Exp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HasBlog" class="control-label">Has a Blog:</label>
                <input asp-for="HasBlog" class="form-control" />
                <span asp-validation-for="HasBlog" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogURL" class="control-label">Blog URL:</label>
                <input asp-for="BlogURL" class="form-control" />
                <span asp-validation-for="BlogURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Browser" class="control-label">Browser:</label>
                <input asp-for="Browser" class="form-control" />
                <span asp-validation-for="Browser" class="text-danger"></span>
            </div>
            
            <label class="control-label">Certifications:</label>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Year of Completion</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Certifications.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.EditorFor(x => x.Certifications[i].Name, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                            <td>
                                @Html.EditorFor(x => x.Certifications[i].YoCompletion, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

            <div class="form-group">
                <label asp-for="Employer" class="control-label">Employer Type:</label>
                <select asp-for="Employer" class="form-control">
                    <option selected disabled>- Please select -</option>
                    <option>Full-time Employee</option>
                    <option>Part-time Employee</option>
                    <option>Probation Employee</option>
                </select>
                <span asp-validation-for="Employer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationFee" class="control-label">Registration Fee:</label>
                <input asp-for="RegistrationFee" class="form-control" />
                <span asp-validation-for="RegistrationFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sessions" class="control-label">Sessions:</label>
                <input asp-for="Sessions" class="form-control" />
                <span asp-validation-for="Sessions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
